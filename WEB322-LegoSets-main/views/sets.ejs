  <div class="container mx-auto p-4">

    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center ">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Collection</h1>

          <p class="py-6">Click on any of the three themes below to filter sets: <a href="/lego/sets?theme=Video Games and Accessories"
              class="btn btn-primary btn-xs">Video games</a> <a href="/lego/sets?theme=Bulk Bricks"
              class="btn btn-primary btn-xs">Bulk Bricks</a> <a href="/lego/sets?theme=9V"
              class="btn btn-primary btn-border btn-xs">9V</a> </p>
        </div>
      </div>
    </div>

    <br />

    <div class="overflow-x-auto overflow-y-hidden">
      <table class="table table-zebra">
        <!-- head -->
  
        <!-- row 1 -->
        <% sets.forEach(set => { %>
          <tr class="colored-text">
            <td colspan="2">
              <div class="flex items-center space-x-3">
                <div class="avatar">
                  <div class="w-32 h-32">
                    <img class="mask mask-squircle w-44 h-44" src="<%= set.img_url %>" alt="Lego-img" />
                  </div>
                </div>
              </div>
            </td>
            <td>
              <div class="px-14">
                <p>
                  <span class="py-6">
                    <%= set.name %>
                  </span> |
                  <a href="/lego/sets?theme=<%= set.Theme.name %>">
                    <span class="py-6">
                      <%= set.Theme.name %>
                    </span>
                  </a>
                </p>
              </div>
            </td>
            <td class="px-8">
              <span><b>Year: </b>
                <%= set.year %> - <b>Parts: </b>
                <%= set.num_parts %>
              </span>
            </td>
            <th>
              <a href="/lego/sets/<%= set.set_num %>">
                <button class="btn btn-primary btn-xs colored-text">
                  details
                </button>
              </a>
            </th>
          </tr>
        <% }) %>
        </tbody>
      </table>
    </div>
