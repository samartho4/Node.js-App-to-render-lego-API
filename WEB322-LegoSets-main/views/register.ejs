<body tabindex="-1">
<!-- Navbar -->
<%- include('partials/navbar', {page:'/register'}) %>

<div class="container mx-auto p-4">
    <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold">Register</h1>
                <p class="py-6">Your credentials?</p>
            </div>
        </div>
    </div>

    <br>

    <form method="post" action="/register" class="space-y-4">
        <div class="flex flex-col">
            <label for="userName" class="label custom-label">User Name</label>
            <input
                id="userName"
                name="userName"
                type="text"
                placeholder="User Name"
                required
                class="input input-bordered custom-input"
            />
        </div>

        <div class="flex flex-col">
            <label for="password" class="label custom-label">Password</label>
            <input
                id="password"
                name="password"
                type="password"
                placeholder="Password"
                required
                class="input input-bordered custom-input"
            />
        </div>

        <div class="flex flex-col">
            <label for="password2" class="label custom-label">Confirm Password</label>
            <input
                id="password2"
                name="password2"
                type="password"
                placeholder="Confirm Password"
                required
                class="input input-bordered custom-input"
            />
        </div>

        <div class="flex flex-col">
            <label for="email" class="label custom-label">Email Address</label>
            <input
                id="email"
                name="email"
                type="email"
                placeholder="Email Address"
                required
                class="input input-bordered custom-input"
            />
        </div>

        <input
            type="submit"
            class="button-71"
            value="Register"
        />
    </form>

    <!-- Show error message if present -->
    <% if (successMessage === "" && errorMessage) { %>
    <div class="alert alert-error">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span><%= errorMessage %></span>
    </div>
    <% } else if (successMessage && errorMessage === "") { %>

    <!-- Show success message -->
    <div class="alert">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span><%= successMessage %></span>
    </div>
    <br />
    <div class="text-center"> <!-- Center the button -->
        <a href="/login" class="button-71">
            Proceed to Log in
        </a>
    </div>

    <% } %>
</div>
